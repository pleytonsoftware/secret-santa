// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String             @id @default(cuid())
  email         String             @unique
  name          String?
  image         String?
  emailVerified DateTime?
  createdAt     DateTime           @default(now())
  updatedAt     DateTime           @updatedAt
  groups        SecretSantaGroup[]
  accounts      Account[]
  sessions      Session[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model SecretSantaGroup {
  id              String        @id @default(cuid())
  name            String
  description     String?
  ownerId         String
  owner           User          @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  participants    Participant[]
  assignments     Assignment[]
  isFinalized     Boolean       @default(false)
  lastEmailSentAt DateTime?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  @@map("secret_santa_groups")
}

model Participant {
  id            String           @id @default(cuid())
  name          String
  email         String
  groupId       String
  group         SecretSantaGroup @relation(fields: [groupId], references: [id], onDelete: Cascade)
  givingTo      Assignment[]     @relation("giver")
  receivingFrom Assignment[]     @relation("receiver")
  createdAt     DateTime         @default(now())

  @@unique([groupId, email])
  @@map("participants")
}

model Assignment {
  id         String           @id @default(cuid())
  groupId    String
  group      SecretSantaGroup @relation(fields: [groupId], references: [id], onDelete: Cascade)
  giverId    String
  giver      Participant      @relation("giver", fields: [giverId], references: [id], onDelete: Cascade)
  receiverId String
  receiver   Participant      @relation("receiver", fields: [receiverId], references: [id], onDelete: Cascade)
  emailSent  Boolean          @default(false)
  createdAt  DateTime         @default(now())

  @@unique([groupId, giverId])
  @@map("assignments")
}
